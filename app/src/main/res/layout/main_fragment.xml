<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="mainFragment" type="com.android.khayal.flickrdemo.main.MainFragment"/>
        <variable name="viewModel" type="com.android.khayal.flickrdemo.main.MainFragmentViewModel"/>
    </data>
    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".main.MainFragment">

        <android.support.v7.widget.RecyclerView
                android:id="@+id/search_results_rcv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:recyclerViewData="@{viewModel.feed}"
                app:recyclerItemClickListener="@{mainFragment}"/>

        <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:setVisibility="@{viewModel.showLoading}"
        />
    </android.support.constraint.ConstraintLayout>
</layout>